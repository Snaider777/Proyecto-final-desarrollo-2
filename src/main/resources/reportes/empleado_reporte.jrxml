<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports 
                                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="empleado_reporte" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    
    <style name="Tabla-Header" mode="Opaque" backcolor="#2C74B3" forecolor="#FFFFFF"
           isBold="true" hTextAlign="Center" vTextAlign="Middle"> 
        <box leftPadding="5" rightPadding="5"> 
            <pen lineWidth="0.5" lineColor="#CCCCCC"/>
            <topPen lineWidth="0.5" lineColor="#CCCCCC"/>
            <leftPen lineWidth="0.5" lineColor="#CCCCCC"/>
            <bottomPen lineWidth="0.5" lineColor="#CCCCCC"/>
            <rightPen lineWidth="0.5" lineColor="#CCCCCC"/>
        </box>
    </style>
    <style name="Tabla-Detail" mode="Opaque" backcolor="#FFFFFF" forecolor="#333333"
           vTextAlign="Middle"> 
        <box leftPadding="5" rightPadding="5">
            <pen lineWidth="0.5" lineColor="#E0E0E0"/> 
            <topPen lineWidth="0.5" lineColor="#E0E0E0"/>
            <leftPen lineWidth="0.5" lineColor="#E0E0E0"/>
            <bottomPen lineWidth="0.5" lineColor="#E0E0E0"/>
            <rightPen lineWidth="0.5" lineColor="#E0E0E0"/>
        </box>
    </style>
    <style name="Default_Text" forecolor="#333333"/>

    <parameter name="usuarioImpresion" class="java.lang.String" isForPrompting="false"/>
    <parameter name="fechaImpresion" class="java.util.Date" isForPrompting="false"/>

    <field name="nombresEmpleado" class="java.lang.String"/>
    <field name="apellidosEmpleado" class="java.lang.String"/>
    <field name="direccionEmpleado" class="java.lang.String"/>
    <field name="duiEmpleado" class="java.lang.String"/>
    <field name="telefonoEmpleado" class="java.lang.String"/>

    <title>
        <band height="150">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="70" backcolor="#0A2647" forecolor="#0A2647"/>
                <graphicElement><pen lineWidth="0.0"/></graphicElement>
            </rectangle>
            
            <staticText>
                <reportElement x="0" y="0" width="555" height="70" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="28" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE EMPLEADOS]]></text>
            </staticText>

            <image scaleImage="FillFrame">
                <reportElement x="470" y="5" width="60" height="60"/>
                <imageExpression><![CDATA["src/main/resources/images/Loguito.png"]]></imageExpression>
            </image>
            
            <staticText>
                <reportElement x="20" y="80" width="130" height="20" style="Default_Text"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[Fecha de impresión:]]></text>
            </staticText>
            
            <textField pattern="dd/MM/yyyy h:mm a">
                <reportElement x="150" y="80" width="200" height="20" style="Default_Text"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$P{fechaImpresion}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="20" y="100" width="130" height="20" style="Default_Text"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[Generado por:]]></text>
            </staticText>
            
            <textField>
                <reportElement x="150" y="100" width="300" height="20" style="Default_Text"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$P{usuarioImpresion}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="140" width="555" height="1" forecolor="#CCCCCC"/>
            </line>
        </band>
    </title>

    <columnHeader>
        <band height="30" splitType="Stretch">

            <staticText>
                <reportElement style="Tabla-Header" x="0" y="0" width="125" height="30"/>
                <text><![CDATA[Nombres]]></text>
            </staticText>

            <staticText>
                <reportElement style="Tabla-Header" x="125" y="0" width="125" height="30"/>
                <text><![CDATA[Apellidos]]></text>
            </staticText>

            <staticText>
                <reportElement style="Tabla-Header" x="250" y="0" width="140" height="30"/>
                <text><![CDATA[Dirección]]></text>
            </staticText>

            <staticText>
                <reportElement style="Tabla-Header" x="390" y="0" width="75" height="30"/>
                <text><![CDATA[DUI]]></text>
            </staticText>

            <staticText>
                <reportElement style="Tabla-Header" x="465" y="0" width="85" height="30"/>
                <text><![CDATA[Teléfono]]></text>
            </staticText>

        </band>
    </columnHeader>

    <detail>
        <band height="25" splitType="Stretch">

            <textField>
                <reportElement style="Tabla-Detail" x="0" y="0" width="125" height="25"/>
                <textFieldExpression><![CDATA[$F{nombresEmpleado}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement style="Tabla-Detail" x="125" y="0" width="125" height="25"/>
                <textFieldExpression><![CDATA[$F{apellidosEmpleado}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement style="Tabla-Detail" x="250" y="0" width="140" height="25"/>
                <textFieldExpression><![CDATA[$F{direccionEmpleado}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement style="Tabla-Detail" x="390" y="0" width="75" height="25"/>
                <textFieldExpression><![CDATA[$F{duiEmpleado}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement style="Tabla-Detail" x="465" y="0" width="85" height="25"/>
                <textFieldExpression><![CDATA[$F{telefonoEmpleado}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <pageFooter>
        <band height="40">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="40" backcolor="#0A2647" forecolor="#0A2647"/>
                <graphicElement><pen lineWidth="0.0"/></graphicElement>
            </rectangle>
            <textField>
                <reportElement x="450" y="10" width="95" height="20" forecolor="#FFFFFF"/>
                <textElement textAlignment="Right" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="20" y="10" width="250" height="20" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[Muebleria USO]]></text>
            </staticText>
        </band>
    </pageFooter>

</jasperReport>