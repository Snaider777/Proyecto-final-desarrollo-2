<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports 
                                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ventas_reporte" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    
    <style name="Tabla-Header" mode="Opaque" backcolor="#2C74B3" forecolor="#FFFFFF"
           isBold="true" hTextAlign="Center" vTextAlign="Middle"> 
        <box leftPadding="5" rightPadding="5"> 
            <pen lineWidth="0.5" lineColor="#CCCCCC"/>
            <topPen lineWidth="0.5" lineColor="#CCCCCC"/>
            <leftPen lineWidth="0.5" lineColor="#CCCCCC"/>
            <bottomPen lineWidth="0.5" lineColor="#CCCCCC"/>
            <rightPen lineWidth="0.5" lineColor="#CCCCCC"/>
        </box>
    </style>
    <style name="Tabla-Detail" mode="Opaque" backcolor="#FFFFFF" forecolor="#333333"
           vTextAlign="Middle"> 
        <box leftPadding="5" rightPadding="5">
            <pen lineWidth="0.5" lineColor="#E0E0E0"/> 
            <topPen lineWidth="0.5" lineColor="#E0E0E0"/>
            <leftPen lineWidth="0.5" lineColor="#E0E0E0"/>
            <bottomPen lineWidth="0.5" lineColor="#E0E0E0"/>
            <rightPen lineWidth="0.5" lineColor="#E0E0E0"/>
        </box>
    </style>
    <style name="Total-Suma" forecolor="#0A2647"
           hTextAlign="Right" vTextAlign="Middle" isBold="true">
        </style>

    <parameter name="usuarioImpresion" class="java.lang.String" isForPrompting="false"/>
    <parameter name="fechaImpresion" class="java.util.Date" isForPrompting="false"/>
    <parameter name="fechaInicio" class="java.lang.String" isForPrompting="false"/>
    <parameter name="fechaFin" class="java.lang.String" isForPrompting="false"/>

    <field name="fechaVenta" class="java.time.LocalDateTime"/>
    <field name="total" class="java.math.BigDecimal"/>
    <field name="empleado.nombresEmpleado" class="java.lang.String"/>
    <field name="empleado.apellidosEmpleado" class="java.lang.String"/>
    <field name="cliente.nombresCliente" class="java.lang.String"/>
    <field name="cliente.apellidosCliente" class="java.lang.String"/>

    <variable name="TotalGeneralVentas" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{total}]]></variableExpression>
    </variable>

    <title>
        <band height="180">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="70" backcolor="#0A2647" forecolor="#0A2647"/>
                <graphicElement><pen lineWidth="0.0"/></graphicElement>
            </rectangle>
            
            <staticText>
                <reportElement x="0" y="0" width="555" height="70" forecolor="#FFFFFF"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="28" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE VENTAS]]></text>
            </staticText>

            <image scaleImage="FillFrame">
                <reportElement x="470" y="5" width="60" height="60"/>
                <imageExpression><![CDATA["src/main/resources/images/Loguito.png"]]></imageExpression>
            </image>
            
            <staticText>
                <reportElement x="20" y="80" width="130" height="20" forecolor="#333333"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[Fecha de impresión:]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy h:mm a">
                <reportElement x="150" y="80" width="200" height="20" forecolor="#333333"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$P{fechaImpresion}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="20" y="100" width="130" height="20" forecolor="#333333"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[Generado por:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="100" width="300" height="20" forecolor="#333333"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$P{usuarioImpresion}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="20" y="130" width="130" height="20" forecolor="#0A2647"/>
                <textElement verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Rango del Reporte:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="130" width="400" height="20" forecolor="#0A2647"/>
                <textElement verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    "Desde: " + $P{fechaInicio} + " hasta: " + $P{fechaFin}
                ]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="170" width="555" height="1" forecolor="#CCCCCC"/>
            </line>
        </band>
    </title>

    <columnHeader>
        <band height="30" splitType="Stretch">
            <staticText>
                <reportElement style="Tabla-Header" x="0" y="0" width="120" height="30"/>
                <text><![CDATA[Fecha]]></text>
            </staticText>
            
            <staticText>
                <reportElement style="Tabla-Header" x="120" y="0" width="190" height="30"/>
                <text><![CDATA[Cliente]]></text>
            </staticText>
            
            <staticText>
                <reportElement style="Tabla-Header" x="310" y="0" width="170" height="30"/>
                <text><![CDATA[Empleado]]></text>
            </staticText>
            
            <staticText>
                <reportElement style="Tabla-Header" x="480" y="0" width="75" height="30"/>
                <textElement textAlignment="Right"/>
                <text><![CDATA[Total ($)]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="25" splitType="Stretch">
            <textField pattern="dd/MM/yyyy HH:mm"> 
                <reportElement style="Tabla-Detail" x="0" y="0" width="120" height="25"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[java.sql.Timestamp.valueOf($F{fechaVenta})]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement style="Tabla-Detail" x="120" y="0" width="190" height="25"/>
                <textFieldExpression><![CDATA[$F{cliente.nombresCliente} + " " + $F{cliente.apellidosCliente}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement style="Tabla-Detail" x="310" y="0" width="170" height="25"/>
                <textFieldExpression><![CDATA[$F{empleado.nombresEmpleado} + " " + $F{empleado.apellidosEmpleado}]]></textFieldExpression>
            </textField>
            
            <textField pattern="$ #,##0.00">
                <reportElement style="Tabla-Detail" x="480" y="0" width="75" height="25"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{total}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
    
    <pageFooter>
        <band height="40">
            <rectangle>
                <reportElement x="0" y="0" width="555" height="40" backcolor="#0A2647" forecolor="#0A2647"/>
                <graphicElement><pen lineWidth="0.0"/></graphicElement>
            </rectangle>
            <textField>
                <reportElement x="450" y="10" width="95" height="20" forecolor="#FFFFFF"/>
                <textElement textAlignment="Right" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="20" y="10" width="250" height="20" forecolor="#FFFFFF"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[Muebleria USO]]></text>
            </staticText>
        </band>
    </pageFooter>

    <summary>
        <band height="60">
            <line>
                <reportElement x="0" y="10" width="555" height="1" forecolor="#0A2647"/>
            </line>
            
            <staticText>
                <reportElement x="250" y="30" width="220" height="20" style="Total-Suma" forecolor="#0A2647"/>
                <textElement>
                    <font size="14"/>
                </textElement>
                <text><![CDATA[TOTAL EN VENTAS:]]></text>
            </staticText>
            
            <textField pattern="$ #,##0.00">
                <reportElement x="470" y="30" width="85" height="20" style="Total-Suma" forecolor="#0A2647"/>
                 <textElement>
                    <font size="14"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{TotalGeneralVentas}]]></textFieldExpression>
            </textField>
        </band>
    </summary>

</jasperReport>