<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.KESNAYFERLYDDY.app.controllers.DashboardController"
            stylesheets="@/styles/dashboard.css"
            prefWidth="900" prefHeight="600">

  <top>
    <HBox spacing="10" style="-fx-padding:10;" alignment="CENTER_LEFT">
      <Label fx:id="lblUser" text="Usuario:" styleClass="titulo"/>
      <Region HBox.hgrow="ALWAYS"/>
      <Button text="Cerrar sesiÃ³n" onAction="#onLogout"/>
    </HBox>
  </top>

  <center>
    <VBox spacing="18" alignment="TOP_CENTER" style="-fx-padding: 20;">
      <Label text="Panel principal" style="-fx-font-size:20px; -fx-font-weight:bold;"/>
      <HBox spacing="16" alignment="CENTER">
        <VBox fx:id="cardClientes" styleClass="card" onMouseClicked="#onOpenClientes" spacing="8">
          <Label text="CLIENTES" styleClass="card-title"/>
          <Label fx:id="lblClientesCount" text="..." styleClass="card-count"/>
          <Button text="Ver clientes" onAction="#onOpenClientes"/>
        </VBox>

        <VBox fx:id="cardVentas" styleClass="card" onMouseClicked="#onOpenVentas" spacing="8">
          <Label text="VENTAS" styleClass="card-title"/>
          <Label fx:id="lblVentasCount" text="..." styleClass="card-count"/>
          <Button text="Ver ventas" onAction="#onOpenVentas"/>
        </VBox>

        <VBox fx:id="cardUsuarios" styleClass="card" onMouseClicked="#onOpenUsuarios" spacing="8">
          <Label text="USUARIOS" styleClass="card-title"/>
          <Label fx:id="lblUsuariosCount" text="..." styleClass="card-count"/>
          <Button text="Administrar" onAction="#onOpenUsuarios"/>
        </VBox>

        <VBox fx:id="cardProductos" styleClass="card" onMouseClicked="#onOpenProductos" spacing="8">
          <Label text="PRODUCTOS" styleClass="card-title"/>
          <Label fx:id="lblProductosCount" text="..." styleClass="card-count"/>
          <Button text="Ver productos" onAction="#onOpenProductos"/>
        </VBox>
      </HBox>
    </VBox>
  </center>

</BorderPane>
