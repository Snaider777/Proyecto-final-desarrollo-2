<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports 
                                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ventas_reporte" pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <parameter name="usuarioImpresion" class="java.lang.String" isForPrompting="false"/>
    <parameter name="fechaImpresion" class="java.util.Date" isForPrompting="false"/>
    <parameter name="fechaInicio" class="java.lang.String" isForPrompting="false"/>
    <parameter name="fechaFin" class="java.lang.String" isForPrompting="false"/>

    <field name="idVenta" class="java.lang.Integer"/>
    <field name="fechaVenta" class="java.time.LocalDateTime"/>
    <field name="total" class="java.math.BigDecimal"/>
    <field name="empleado.nombresEmpleado" class="java.lang.String"/>
    <field name="empleado.apellidosEmpleado" class="java.lang.String"/>
    <field name="cliente.nombresCliente" class="java.lang.String"/>
    <field name="cliente.apellidosCliente" class="java.lang.String"/>

    <variable name="TotalGeneralVentas" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{total}]]></variableExpression>
    </variable>

    <title>
        <band height="150">
            <staticText>
                <reportElement x="90" y="0" width="350" height="40"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[REPORTE DE VENTAS POR PERÍODO]]></text>
            </staticText>

            <image>
                <reportElement x="450" y="0" width="90" height="80"/>
                <imageExpression><![CDATA["src/main/resources/images/Loguito.png"]]></imageExpression>
            </image>
            
            <staticText>
                <reportElement x="20" y="40" width="130" height="20"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[Fecha de impresión:]]></text>
            </staticText>

            <textField pattern="dd/MM/yyyy h:mm a">
                <reportElement x="150" y="40" width="200" height="20"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$P{fechaImpresion}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="20" y="60" width="130" height="20"/>
                <textElement verticalAlignment="Middle"/>
                <text><![CDATA[Generado por:]]></text>
            </staticText>

            <textField>
                <reportElement x="150" y="60" width="300" height="20"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$P{usuarioImpresion}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="20" y="90" width="130" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Rango de Reporte:]]></text>
            </staticText>
            
            <textField>
                <reportElement x="150" y="90" width="400" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    "Desde: " + $P{fechaInicio} + " hasta: " + $P{fechaFin}
                ]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="20" splitType="Stretch">
            
            <staticText>
                <reportElement x="0" y="0" width="55" height="20"/>
                <textElement verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[ID Venta]]></text>
            </staticText>

            <staticText>
                <reportElement x="55" y="0" width="85" height="20"/>
                <textElement verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Fecha]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="140" y="0" width="130" height="20"/>
                <textElement verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Cliente]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="270" y="0" width="130" height="20"/>
                <textElement verticalAlignment="Middle"><font isBold="true"/></textElement>
                <text><![CDATA[Empleado]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="455" y="0" width="100" height="20"/>
                <textElement verticalAlignment="Middle" textAlignment="Right"><font isBold="true"/></textElement>
                <text><![CDATA[Total ($)]]></text>
            </staticText>

        </band>
    </columnHeader>

    <detail>
        <band height="20" splitType="Stretch">

            <textField>
                <reportElement x="0" y="0" width="55" height="20"/>
                <textFieldExpression><![CDATA[$F{idVenta}]]></textFieldExpression>
            </textField>

            <textField pattern="dd/MM/yyyy HH:mm"> 
                <reportElement x="55" y="0" width="85" height="20"/>
                <textFieldExpression><![CDATA[java.sql.Timestamp.valueOf($F{fechaVenta})]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="140" y="0" width="130" height="20"/>
                <textFieldExpression><![CDATA[$F{cliente.nombresCliente} + " " + $F{cliente.apellidosCliente}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="270" y="0" width="130" height="20"/>
                <textFieldExpression><![CDATA[$F{empleado.nombresEmpleado} + " " + $F{empleado.apellidosEmpleado}]]></textFieldExpression>
            </textField>
            
            <textField pattern="$ #,##0.00">
                <reportElement x="455" y="0" width="100" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{total}]]></textFieldExpression>
            </textField>

        </band>
    </detail>
    
        <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="400" y="0" width="150" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Página " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

    <summary>
        <band height="50">
            <staticText>
                <reportElement x="300" y="10" width="150" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[TOTAL EN VENTAS:]]></text>
            </staticText>
            
            <textField pattern="$ #,##0.00">
                <reportElement x="455" y="10" width="100" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{TotalGeneralVentas}]]></textFieldExpression>
            </textField>
            
            <line>
                <reportElement x="300" y="8" width="255" height="1"/>
            </line>
        </band>
    </summary>

</jasperReport>