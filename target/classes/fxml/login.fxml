<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.KESNAYFERLYDDY.app.controllers.LoginController"
      spacing="12" alignment="CENTER" prefWidth="400" prefHeight="250" style="-fx-padding:20;">
    <Label text="Iniciar sesión" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="txtUser" promptText="Usuario" />
    <PasswordField fx:id="txtPass" promptText="Contraseña" />
    <Button text="Ingresar" fx:id="btnLogin" onAction="#onLogin" />
    <Label fx:id="lblMsg" style="-fx-text-fill: red;" />
</VBox>
