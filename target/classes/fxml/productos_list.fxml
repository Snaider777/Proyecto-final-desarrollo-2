<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.KESNAYFERLYDDY.app.controllers.ProductosListController" stylesheets="@/styles/productos.css" >
    <VBox spacing="16" style="-fx-background-color: #f8f9fa;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <BorderPane styleClass="header-productos">
            <left>
                <Label text="Productos" styleClass="titulo-productos"/>
            </left>
            <right>
                <HBox spacing="12" alignment="CENTER_RIGHT">
                    <Label fx:id="lblSinCategorias"/>
                    <Button text="Nuevo producto" onMouseClicked="#manejarModalRegistrarMuebles" styleClass="btn-accion-primario"/>
                    <Button text="Nueva categoría" onMouseClicked="#manejarModalRegistrarCategorias" styleClass="btn-accion"/>
                    <Button text="Cerrar" onAction="#cerrarVistaProductos" styleClass="btn-accion"/>
                </HBox>
            </right>
        </BorderPane>
        <VBox fx:id="contenedorMuebles" VBox.vgrow="ALWAYS">
        </VBox>
    </VBox>
    <VBox fx:id="overlayRegistrarMuebles"
        alignment="CENTER"
        visible="false"
        onMouseClicked="#manejarModalRegistrarMuebles"
        xmlns:fx="http://javafx.com/fxml"
        styleClass="overlay">
        <Label fx:id="lblMsgRegistroMueble" id="lblMsg"/>
        <VBox onMouseClicked="#cancelarClickEnModal"
            spacing="15"
            styleClass="modal">

            <Label text="Nuevo producto" styleClass="modal-title"/>

            <VBox spacing="10">
                <Label text="Nombre" styleClass="input-label"/>
                <TextField fx:id="txtNombre" promptText="Ingrese el nombre del mueble" styleClass="input-field" onMouseClicked="#ocultarMensajeRegistroMueble"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Descripción" styleClass="input-label"/>
                <TextField fx:id="txtDescripcion" promptText="Ingrese la descripción del mueble" styleClass="input-field" onMouseClicked="#ocultarMensajeRegistroMueble"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Existencias iniciales" styleClass="input-label"/>
                <TextField fx:id="txtExistencias" promptText="Ingrese las existencias" styleClass="input-field" onMouseClicked="#ocultarMensajeRegistroMueble"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Material" styleClass="input-label"/>
                <TextField fx:id="txtMaterial" promptText="Ingrese el material" styleClass="input-field" onMouseClicked="#ocultarMensajeRegistroMueble"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Categoría" styleClass="input-label"/>
                <ComboBox fx:id="comboCategoria" styleClass="input-field" maxWidth="Infinity" onMouseClicked="#ocultarMensajeRegistroMueble"/>
            </VBox>

            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Button text="Cancelar" onAction="#manejarModalRegistrarMuebles" styleClass="btn-secondary"/>
                <Button text="Guardar" onAction="#registrarMueble" styleClass="btn-primary"/>
            </HBox>
        </VBox>
    </VBox>
    <VBox fx:id="overlayEditarMuebles"
        alignment="CENTER"
        visible="false"
        onMouseClicked="#manejarModalEditarMuebles"
        xmlns:fx="http://javafx.com/fxml"
        styleClass="overlay">
        <Label fx:id="lblMsgEdicionMueble" id="lblMsg"/>
        <VBox onMouseClicked="#cancelarClickEnModal"
            spacing="15"
            styleClass="modal">

            <Label text="Editar producto" styleClass="modal-title"/>

            <VBox spacing="10">
                <Label text="Nombre" styleClass="input-label"/>
                <TextField fx:id="txtNombreEditar" styleClass="input-field" onMouseClicked="#ocultarMensajeRegistroMueble"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Descripción" styleClass="input-label"/>
                <TextField fx:id="txtDescripcionEditar" styleClass="input-field" onMouseClicked="#ocultarMensajeRegistroMueble"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Existencias" styleClass="input-label"/>
                <TextField fx:id="txtExistenciasEditar" styleClass="input-field" onMouseClicked="#ocultarMensajeRegistroMueble"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Material" styleClass="input-label"/>
                <TextField fx:id="txtMaterialEditar" styleClass="input-field" onMouseClicked="#ocultarMensajeRegistroMueble"/>
            </VBox>

            <VBox spacing="10">
                <Label text="Categoría" styleClass="input-label"/>
                <ComboBox fx:id="comboCategoriaEditar" styleClass="input-field" maxWidth="Infinity" onMouseClicked="#ocultarMensajeRegistroMueble"/>
            </VBox>

            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Button text="Cancelar" onAction="#manejarModalEditarMuebles" styleClass="btn-secondary"/>
                <Button text="Guardar" onAction="#editarMueble" styleClass="btn-primary"/>
            </HBox>
        </VBox>
        
    </VBox>
    <VBox fx:id="overlayRegistrarCategorias"
        alignment="CENTER"
        visible="false"
        onMouseClicked="#manejarModalRegistrarCategorias"
        xmlns:fx="http://javafx.com/fxml"
        styleClass="overlay">
        <Label fx:id="lblMsgRegistroCategoria" id="lblMsg"/>
        <VBox onMouseClicked="#cancelarClickEnModal"
            spacing="15"
            styleClass="modal">

            <Label text="Nueva categoria" styleClass="modal-title"/>
            <VBox spacing="10">
                <Label text="Nombre" styleClass="input-label"/>
                <TextField fx:id="txtNombreCategoria" promptText="Ingrese la nueva categoria" styleClass="input-field" onMouseClicked="#ocultarMensajeRegistroMueble"/>
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Button text="Cancelar" onAction="#manejarModalRegistrarCategorias" styleClass="btn-secondary"/>
                <Button text="Guardar" onAction="#registrarCategoria" styleClass="btn-primary"/>
            </HBox>
        </VBox>
    </VBox>
    <VBox alignment="CENTER" visible="false" fx:id="overlayEliminar" styleClass="overlay" onMouseClicked="#manejarModalEliminar">
        <VBox onMouseClicked="#cancelarClickEnModal" styleClass="modal">
            <Label fx:id="lblEliminar" styleClass="modal-title"/>
            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Button text="Cancelar" onAction="#manejarModalEliminar" styleClass="btn-secondary"/>
                <Button text="Eliminar" styleClass="btn-primary" onAction="#eliminarMueble"/>
            </HBox>
        </VBox>
    </VBox>
</StackPane>
