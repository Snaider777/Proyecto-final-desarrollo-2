<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.KESNAYFERLYDDY.app.controllers.EmpleadosListController"
           stylesheets="@/styles/empleados.css">

    <BorderPane prefWidth="1400" prefHeight="800">
        
        <top>
            <BorderPane styleClass="navbar" prefHeight="70">
                <left>
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <ImageView fitWidth="45" fitHeight="45" preserveRatio="true">
                            <image>
                                <Image url="@/images/Loguito.png" />
                            </image>
                        </ImageView>
                        <VBox spacing="2">
                            <Label text="MUEBLERÍA USO" styleClass="navbar-brand"/>
                            <Label text="Gestión de Empleados" styleClass="navbar-subtitle"/>
                        </VBox>
                    </HBox>
                </left>
                
                <right>
                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <VBox spacing="2" alignment="CENTER_RIGHT">
                            <Label text="Bienvenido," styleClass="user-info"/>
                            <Label fx:id="lblUser" text="Administrador" styleClass="user-info" 
                                   style="-fx-font-weight: 700; -fx-font-size: 15px;"/>
                        </VBox>
                        <Button text="Volver al Dashboard" onAction="#cerrarVistaEmpleados" styleClass="btn-logout"/>
                    </HBox>
                </right>
            </BorderPane>
        </top>
        
        <center>
            <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane">
                <VBox alignment="TOP_CENTER" spacing="2" styleClass="content-container">
                    <BorderPane styleClass="content-header" prefHeight="70">
                        <left>
                            <VBox spacing="2">
                                <Label text="Gestión de Empleados" styleClass="content-title"/>
                                <Label text="Administre la base de datos de empleados de la mueblería" 
                                       styleClass="content-subtitle"/>
                            </VBox>
                        </left>
                        <right>
                            <HBox spacing="12" alignment="CENTER_RIGHT">
                                <Button text="Roles y Permisos" onAction="#accionRolesPermisos" styleClass="button,secondary"/>
                                <Button text="Generar Reporte" styleClass="button,secondary" onAction="#accionReporte"/>
                                <Button text="Nuevo Empleado" styleClass="button,primary" onAction="#manejarModalRegistrar"/>
                            </HBox>
                        </right>
                    </BorderPane>

                    <VBox alignment="CENTER" spacing="5" visible="false" fx:id="messageContainer" prefHeight="40">
                        <Label fx:id="lblEliminadoCorrectamente" styleClass="success-message"/>
                    </VBox>
                    
                    <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
                        <TableView fx:id="tablaEmpleados" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="columnaId" text="ID" prefWidth="80" styleClass="table-column"/>
                                <TableColumn fx:id="columnaNombres" text="Nombres" prefWidth="200" styleClass="table-column"/>
                                <TableColumn fx:id="columnaApellidos" text="Apellidos" prefWidth="200" styleClass="table-column"/>
                                <TableColumn fx:id="columnaDUI" text="DUI" prefWidth="150" styleClass="table-column"/>
                                <TableColumn fx:id="columnaDireccion" text="Dirección" prefWidth="200" styleClass="table-column"/>
                                <TableColumn fx:id="columnaTel" text="Teléfono" prefWidth="150" styleClass="table-column"/>
                                <TableColumn fx:id="columnaAcciones" text="Acciones" prefWidth="250" styleClass="table-column"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                    
                    <Label text="Mueblería Uso © 2024 - Sistema desarrollado con JavaFX"
                           styleClass="footer"/>
                </VBox>
            </ScrollPane>
        </center>
        
    </BorderPane>
    
    <VBox alignment="CENTER" styleClass="modal-overlay" visible="false" fx:id="overlayRegistrar" onMouseClicked="#manejarModalRegistrar">
        <VBox styleClass="modal-container" onMouseClicked="#cancelarClickEnModal">
            <VBox spacing="8">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <ImageView fitWidth="48" fitHeight="48" styleClass="modal-icon">
                        <image>
                            <Image url="@/images/empleadosdash.png" />
                        </image>
                    </ImageView>
                    <Label text="Nuevo Empleado" styleClass="modal-title"/>
                </HBox>
                
                <Label fx:id="lblMsgRegistro" styleClass="modal-message"/>
                
                <GridPane hgap="16" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" halignment="LEFT"/>
                        <ColumnConstraints percentWidth="50" halignment="LEFT"/>
                    </columnConstraints>
                    
                    <VBox styleClass="form-field" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Nombres *" styleClass="form-label"/>
                        <TextField fx:id="txtNombres" promptText="Ingrese los nombres" 
                                  styleClass="form-input" onMouseClicked="#ocultarMensajeRegistro"/>
                    </VBox>
                    
                    <VBox styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Apellidos *" styleClass="form-label"/>
                        <TextField fx:id="txtApellidos" promptText="Ingrese los apellidos" 
                                  styleClass="form-input" onMouseClicked="#ocultarMensajeRegistro"/>
                    </VBox>
                    
                    <VBox styleClass="form-field" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Teléfono *" styleClass="form-label"/>
                        <TextField fx:id="txtTelefono" promptText="Ej: 7123-4567" 
                                  styleClass="form-input" onMouseClicked="#ocultarMensajeRegistro"/>
                    </VBox>
                    
                    <VBox styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Label text="DUI *" styleClass="form-label"/>
                        <TextField fx:id="txtDui" promptText="Ej: 12345678-9" 
                                  styleClass="form-input" onMouseClicked="#ocultarMensajeRegistro"/>
                    </VBox>
                    
                    <VBox styleClass="form-field" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                        <Label text="Dirección" styleClass="form-label"/>
                        <TextField fx:id="txtDireccion" promptText="Ingrese la dirección del empleado" 
                                  styleClass="form-input" onMouseClicked="#ocultarMensajeRegistro"/>
                    </VBox>
                    
                </GridPane>
                
                <HBox styleClass="modal-buttons" alignment="CENTER_RIGHT" spacing="12">
                    <Button text="Cancelar" onAction="#manejarModalRegistrar" styleClass="button,secondary"/>
                    <Button text="Guardar Empleado" styleClass="button,primary" onAction="#registrarEmpleado"/>
                </HBox>
            </VBox>
        </VBox>
    </VBox>
    
    <VBox alignment="CENTER" styleClass="modal-overlay" visible="false" fx:id="overlayEditar" onMouseClicked="#manejarModalEditar">
        <VBox styleClass="modal-container" onMouseClicked="#cancelarClickEnModal">
            <VBox spacing="8">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <ImageView fitWidth="48" fitHeight="48" styleClass="modal-icon">
                        <image>
                            <Image url="@/images/empleadosdash.png" />
                        </image>
                    </ImageView>
                    <Label text="Editar Empleado" styleClass="modal-title"/>
                </HBox>
                
                <Label fx:id="lblMsgEdicion" styleClass="modal-message"/>
                
                <GridPane hgap="16" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" halignment="LEFT"/>
                        <ColumnConstraints percentWidth="50" halignment="LEFT"/>
                    </columnConstraints>
                    
                    <VBox styleClass="form-field" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Nombres *" styleClass="form-label"/>
                        <TextField fx:id="txtNombresEditar" styleClass="form-input" onMouseClicked="#ocultarMensajeEdicion"/>
                    </VBox>
                    
                    <VBox styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Apellidos *" styleClass="form-label"/>
                        <TextField fx:id="txtApellidosEditar" styleClass="form-input" onMouseClicked="#ocultarMensajeEdicion"/>
                    </VBox>
                    
                    <VBox styleClass="form-field" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Teléfono *" styleClass="form-label"/>
                        <TextField fx:id="txtTelefonoEditar" styleClass="form-input" onMouseClicked="#ocultarMensajeEdicion"/>
                    </VBox>
                    
                    <VBox styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Label text="DUI *" styleClass="form-label"/>
                        <TextField fx:id="txtDuiEditar" styleClass="form-input" onMouseClicked="#ocultarMensajeEdicion"/>
                    </VBox>
                    
                    <VBox styleClass="form-field" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                        <Label text="Dirección" styleClass="form-label"/>
                        <TextField fx:id="txtDireccionEditar" styleClass="form-input" onMouseClicked="#ocultarMensajeEdicion"/>
                    </VBox>
                    
                </GridPane>
                
                <HBox styleClass="modal-buttons" alignment="CENTER_RIGHT" spacing="12">
                    <Button text="Cancelar" onAction="#manejarModalEditar" styleClass="button,secondary"/>
                    <Button text="Actualizar Empleado" styleClass="button,primary" onAction="#editarEmpleado"/>
                </HBox>
            </VBox>
        </VBox>
    </VBox>
    
    <VBox alignment="CENTER" visible="false" fx:id="overlayEliminar" styleClass="modal-overlay" onMouseClicked="#manejarModalEliminar">
        <VBox styleClass="modal-container,delete-modal" onMouseClicked="#cancelarClickEnModal">
            <VBox spacing="16" alignment="CENTER">
                <Label text="⚠" styleClass="warning-icon"/>
                <Label fx:id="lblEliminar" styleClass="warning-title" wrapText="true"/>
                <Label text="Esta acción no se puede deshacer" styleClass="warning-subtitle"/>
                <HBox styleClass="modal-buttons" alignment="CENTER" spacing="12">
                    <Button text="Cancelar" onAction="#manejarModalEliminar" styleClass="button,secondary"/>
                    <Button text="Eliminar Empleado" styleClass="button,danger" onAction="#eliminarEmpleado"/>
                </HBox>
            </VBox>
        </VBox>
    </VBox>
</StackPane>